<!-- Content
================================================== -->
<div id="titlebar" class="white margin-bottom-30">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h2>Blog</h2>
				<span>Featured Posts</span>
              
				<!-- Breadcrumbs -->
				<nav id="breadcrumbs" class="dark">
					<ul>
						<li><a href="{{ site.url }}">Home</a></li>
						<li>Blog</li>
					</ul>
				</nav>
			</div>
		</div>
	</div>
</div>

<!-- Recent Blog Posts -->
<div class="section white padding-top-0 padding-bottom-60 full-width-carousel-fix">
	<div class="container">
		<div class="row">
			<div class="col-xl-12">
				<div class="blog-carousel">
                    {% for blog in blogs %}
                        {% if blog.get_field('featured_blog') %}
					<a href="{{  blog.link }}" class="blog-compact-item-container">
						<div class="blog-compact-item">
							<img src="{{ blog.thumbnail.src }}" alt="{{ blog.post_title }}">
							<span class="blog-item-tag">{{ blog.category }}</span>
							<div class="blog-compact-item-content">
								<ul class="blog-post-tags">
									<li>{{ blog.date('F j Y') }}</li>
								</ul>
								<h3>{{ blog.post_title }}</h3>
								<p>{{ blog.get_field('post-description') }}</p>
							</div>
						</div>
					</a>
                        {% endif %}
                    {% endfor %}			

				</div>

			</div>
		</div>
	</div>
</div>
<!-- Recent Blog Posts / End -->


<!-- Section -->
<div class="section gray">
	<div class="container">
		<div class="row">
			<div class="col-xl-8 col-lg-8">

				{% include 'template/blog/recent-post.twig' %}

			</div>


			<div class="col-xl-4 col-lg-4 content-left-offset">
				<div class="sidebar-container margin-top-65">
					
					<!-- Location -->
					<div class="sidebar-widget margin-bottom-40">
						<div class="input-with-icon">
							<input id="autocomplete-input" type="text" placeholder="Search">
							<i class="icon-material-outline-search"></i>
						</div>
					</div>

					<!-- Widget -->
				     {% include 'template/blog/trending.twig' %}
					<!-- Widget / End-->


					<!-- Widget -->
					 {% include 'template/post/socials.twig' %}
                      
					<!-- Widget -->
					{# {% include 'template/post/tags.twig' %} #}

				</div>
			</div>

		</div>
	</div>

	<!-- Spacer -->
	<div class="padding-top-40"></div>
	<!-- Spacer -->

</div>
<!-- Section / End -->
